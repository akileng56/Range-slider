<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.slider.Slider" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Slider</name>
    <description>A slider input control</description>
    <icon/>
    <properties>
        <property key="valueAttribute" type="attribute">
            <caption>Value attribute</caption>
            <category>Data source</category>
            <description>The selected value on the range</description>
            <attributeTypes>
                <attributeType name="Integer"/>
                <attributeType name="Long"/>
                <attributeType name="Float"/>
                <attributeType name="Decimal"/>
            </attributeTypes>
        </property>
        <property key="min" type="integer" required="true" defaultValue="0">
            <caption>Min value</caption>
            <category>Data source</category>
            <description>The min for the range, used if attribute is not set</description>
        </property>
        <property key="minAttribute" type="attribute">
            <caption>Min attribute</caption>
            <category>Data source</category>
            <description>The min for the range</description>
            <attributeTypes>
                <attributeType name="Integer"/>
                <attributeType name="Long"/>
                <attributeType name="Float"/>
                <attributeType name="Decimal"/>
            </attributeTypes>
        </property>
        <property key="max" type="integer" required="true" defaultValue="100">
            <caption>Max value</caption>
            <category>Data source</category>
            <description>The max for the range, used if attribute is not set</description>
        </property>
        <property key="maxAttribute" type="attribute">
            <caption>Max attribute</caption>
            <category>Data source</category>
            <description>The max for the range</description>
            <attributeTypes>
                <attributeType name="Integer"/>
                <attributeType name="Long"/>
                <attributeType name="Float"/>
                <attributeType name="Decimal"/>
            </attributeTypes>
        </property>
        <property key="onAfterChangeMicroflow" type="microflow" required="false">
            <caption>After slide</caption>
            <category>Behavior</category>
            <description>Called when the range slider has ended the slide</description>
            <returnType type="Void"/>
        </property>
        <property key="orientation" type="enumeration" defaultValue="horizontal">
            <caption>Orientation</caption>
            <category>Appearance</category>
            <description>Slider orientation: horizontal or vertical</description>
            <enumerationValues>
                <enumerationValue key="horizontal">Horizontal</enumerationValue>
                <enumerationValue key="vertical">Vertical</enumerationValue>
            </enumerationValues>
        </property>
        <property key="markers" type="integer" required="true" defaultValue="0">
            <caption>Markers</caption>
            <category>Appearance</category>
            <description>The number of marker, visible when larger than 2</description>
        </property>
        <property key="tooltipTitle" type="string" required="false" defaultValue="">
            <caption>Tooltip title</caption>
            <category>Appearance</category>
            <description>The title for the tooltip. Leave this empty to disable the tooltip.
Use {1} as a replacement for the current value of the slider</description>
        </property>
        <property key="step" type="integer" required="true" defaultValue="10">
            <caption>Range Step Value</caption>
            <category>Appearance</category>
            <description>The step value of the range, used if attribute is not set</description>
        </property>
        <property key="stepAttribute" type="attribute" required="false">
            <caption>Range step attribute</caption>
            <category>Appearance</category>
            <description>The step value of the range from an attribute, takes precedence over range step value</description>
            <attributeTypes>
                <attributeType name="Integer"/>
                <attributeType name="Long"/>
                <attributeType name="Float"/>
                <attributeType name="Decimal"/>
            </attributeTypes>
        </property>
    </properties>
</widget>
